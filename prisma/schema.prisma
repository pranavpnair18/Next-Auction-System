generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  password      String?
  createdAt     DateTime      @default(now())
  role          Role          @default(USER)
  accounts      Account[]
  sessions      Session[]
  auctionItems  AuctionItem[] // âœ… Important: back-reference
  bids          Bid[]       // all bids placed by the user
  auditlog      AuditLog[]

}

enum Role{
ADMIN
USER
MODERATOR
}

model Account {
  id                Int      @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?   @db.Text
  access_token      String?   @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?   @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         Int     @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AuctionItem {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  startingBid Float
  currentBid  Float?    @default(0)
  endDate     DateTime
  createdAt   DateTime  @default(now())
  completed   Boolean   @default(false)

  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  bids        Bid[]       // all bids placed by the user

}

model Bid {
  id         Int        @id @default(autoincrement())
  amount     Float
  createdAt  DateTime   @default(now())

  // relations
  bidderId   Int
  bidder     User       @relation(fields: [bidderId], references: [id])
  itemId     Int
  item       AuctionItem @relation(fields: [itemId], references: [id])

  @@index([itemId])
  @@index([bidderId])
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  adminId     Int
  action      String
  target      String?   // e.g., user email, auction title, etc.
  details     String?   // optional detailed info
  createdAt   DateTime  @default(now())

  admin       User      @relation(fields: [adminId], references: [id])
}

